<odoo>
    <data>
        <record id="woo_sale_order_form" model="ir.ui.view">
            <field name="name">sale.order.channel.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='channel_id']" position='after'>
                    <field name="pos" invisible="1"/>
                    <field name="woo_order_status" attrs="{'visible': [('pos', '==', 3)]}"/>
                </xpath>

                <button name="preview_sale_order" position="before">
                    <button string="Export Status to Woo Commerce" name="export_woo_order_status" type="object"
                            attrs="{'required': [('pos', '==', 3)], 'invisible': [('pos', '!=', 3)]}"/>
                </button>


            </field>
        </record>
    </data>
</odoo>