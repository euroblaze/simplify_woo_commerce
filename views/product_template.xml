        <record id="view_product_template_form_woo_inherited" model="ir.ui.view">
            <field name="name">product.template.woo.fields</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position='after'>
                    <group>
                        <field name="pos" invisible="1"/>
                    </group>
                </xpath>

                <xpath expr="//page[@name='general_information']//field[@name='list_price']" position='after'>
                    <field name="pos" invisible="1"/>
                    <field name="woo_regular_price"
                           attrs="{'required': [('pos', '==', 3)], 'invisible': [('pos', '!=', 3)]}"/>
                    <field name="woo_sale_price"
                           attrs="{'required': [('pos', '==', 3)], 'invisible': [('pos', '!=', 3)]}"/>
                </xpath>
                <button name="action_update_quantity_on_hand" position="after">
                    <button string="Export to Woo Commerce" name="export_woo_product" type="object"
                            attrs="{'required': [('pos', '==', 3)], 'invisible': [('pos', '!=', 3)]}"/>
                </button>

                <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]" position="inside">
                    <page name="woo_information" string="Woo Commerce Information" sequence="1"
                          attrs="{'visible': [('pos', '=', '3')]}">
                        <group>
                            <group>
                                <field name="woo_status"/>
                                <field name="woo_export_type"/>
                            </group>
                            <group>

                            </group>
                        </group>
                            <group>
                                <field name="woo_remapped_values">
                                      <tree>
                                        <field name="original_value_id"/>
                                        <field name="remapped_value_ids"/>
                                    </tree>
                                </field>

                            </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>